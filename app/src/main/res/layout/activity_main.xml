<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/bg_color">

    <Button
        android:id="@+id/btnFlash"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/ic_flash_off"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="25dp"/>

    <View
        android:layout_width="3dp"
        android:layout_height="300dp"
        android:background="@color/teal_200"
        app:layout_constraintRight_toLeftOf="@id/svCamera"
        app:layout_constraintTop_toTopOf="@id/svCamera"
        app:layout_constraintBottom_toBottomOf="@id/svCamera"
        android:layout_marginEnd="10dp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/svCamera"
        android:layout_marginBottom="10dp"/>
    <View
        android:layout_width="3dp"
        android:layout_height="300dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toRightOf="@id/svCamera"
        app:layout_constraintTop_toTopOf="@id/svCamera"
        app:layout_constraintBottom_toBottomOf="@id/svCamera"
        android:layout_marginStart="10dp"/>
    <View
        android:layout_width="300dp"
        android:layout_height="3dp"
        android:background="@color/teal_200"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/svCamera"
        android:layout_marginTop="10dp"/>

    <SurfaceView
        android:id="@+id/svCamera"
        android:layout_width="320dp"
        android:layout_height="320dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>